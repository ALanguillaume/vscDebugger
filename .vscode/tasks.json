{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Test package",
            "type": "shell",
            "command": "R",
            "args": [
                "--file=tests/test.R",
                "--silent",
                "--no-save",
                "--no-restore"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build and install package",
            "type": "shell",
            "windows": {
                "command": ".\\build.bat"
            },
            "linux": {
                "command": "Rscript -e 'devtools::document()' && Rscript -e 'devtools::install()'"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}
